bootstrap: docker
from: ubuntu:18.04

 % help
An Ubuntu 18.04 Singularity container with basic Python 3.6.6 and packages

%post
    apt-get update
    apt-get -y install \
                    wget \
                    python3 \
                    python3-dev \
                    python3-setuptools \
                    python3-pip \
                    locales \
                    language-pack-fi \
                    language-pack-en

    # to solve the "locale.Error: unsupported locale setting" error
    export LANGUAGE=en_US.UTF-8
    export LC_ALL=en_US.UTF-8
    export LANG=en_US.UTF-8
    locale-gen en_US.UTF-8

    pip3 --no-cache-dir install \
         virtualenv===16.0.0

    # create and activate virtualenv and install remaining packages
    virtualenv -p python3 /neuroenv
    /bin/bash -c "source /neuroenv/bin/activate && \
    pip3 --no-cache-dir install \
         pandas==0.24.2\
         numpy==1.16.2\
         seaborn==0.9.0\
         matplotlib==3.0.3\
         nibabel==2.4.0\
         scikit-learn==0.20.3\
         joblib==0.13.2\
         TPOT==0.9.6\
         joblib==0.13.1\
         ipython==7.5.0\
         xgboost=0.80"
 
    #Â Check if the project folder exists and if not create it
    if [ ! -d /code ]; then mkdir /code; fi

%runscript
/code/singularity/startup.sh "$@"

